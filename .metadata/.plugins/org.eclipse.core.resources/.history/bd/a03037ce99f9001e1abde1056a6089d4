package com.footballorg.services;

import java.io.IOException;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import com.footballorg.helpers.CSVHelper;
import com.footballorg.interfaces.TeamRepository;
import com.footballorg.models.Team;

@Service
public class CSVFileService 
{
	@Autowired
	TeamRepository repository;
	
	 public void save(MultipartFile file) {
		    try {
		      List<Team> tutorials = CSVHelper.csvTeamsImport(file.getInputStream());
		      repository.saveAll(tutorials);
		    } catch (IOException e) {
		      throw new RuntimeException("fail to store csv data: " + e.getMessage());
		    }
		  }

		  public List<Team> getAllTeams() {
		    return repository.findAll();
		  }
}

