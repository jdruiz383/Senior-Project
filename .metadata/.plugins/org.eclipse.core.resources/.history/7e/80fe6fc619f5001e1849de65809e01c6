package com.footballorg.services;

import java.util.List;

import org.springframework.stereotype.Service;

import com.footballorg.interfaces.TeamRepository;
import com.footballorg.models.Team;


@Service
public class TeamService 
{
	private final TeamRepository teamRepository;
	
	public TeamService(TeamRepository teamRepository)
	{
		this.teamRepository = teamRepository;
	}
	
	public Team addTeam(Integer id, String league, String conference, String name, String network, String date, String time)
	{
		if(name == null)
		{
			return null;
		}
		else
		{
			Team team = new Team();
			team.setId(id);
			team.setName(name);
			team.setConference(conference);
			team.setLeague(league);
			team.setNetwork(network);
			team.setDate(date);
			team.setTime(time);
			return teamRepository.save(team);
		}
	}
	
	public Team searchTeam(String name)
	{
		return teamRepository.findByName(name).orElse(null);
	}
	
	public List<Team> findAll()
	{
		return teamRepository.findAll();
	}
}
